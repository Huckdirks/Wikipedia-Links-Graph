#!/bin/sh

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
cd $SCRIPT_DIR/source/c++
echo "Compiling..."
g++ -std=c++20 -Wextra -Wall -Werror -D_GLIBCXX_ASSERTIONS -O3 *.cpp -o run
# -std=c++20 for C++ standard, -Wextra -Wall -Werror for warnings/errors, -D_GLIBCXX_ASSERTIONS for run-time bounds checking for C++ strings and containers, -O3 for optimization
echo "Compiled successfully!"